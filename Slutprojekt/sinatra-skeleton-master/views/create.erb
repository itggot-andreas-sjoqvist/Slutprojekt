<div class="demo-card-wide mdl-card mdl-shadow--8dp tab">
  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text">Skapa</h2>
  </div>
  <div class="mdl-card__supporting-text">
    <div class="mdl-tabs mdl-js-tabs">
      <div class="mdl-tabs__tab-bar">
        <a href="#create_assignment" class="mdl-tabs__tab">Ny Uppgift</a>
        <a href="#create_project" class="mdl-tabs__tab">Nytt Projekt</a>
      </div>
      <div class="mdl-tabs__panel is-active" id="create_assignment">
        <form action="create/project" method="post">
          <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" name="name" type="text" id="name">
          <label class="mdl-textfield__label" for="name">Vad ska göras?</label>
        </div>
          <div class="mdl-textfield mdl-js-textfield">
            <input class="mdl-textfield__input" name="description" type="text" id="description">
            <label class="mdl-textfield__label" for="description">Beskrivning</label>
          </div>
          <div class="mdl-textfield mdl-js-textfield">
            <input class="mdl-textfield__input" name="start_date" type="date" id="start_date">
            <label class="mdl-textfield__label" for="start_date">Start date</label>
          </div>
          <div class="mdl-textfield mdl-js-textfield">
            <input class="mdl-textfield__input" name="end_date" type="date" id="end_date">
            <label class="mdl-textfield__label" for="end_date">End date</label>
          </div>

          <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
            Skapa projekt
          </button>
        </form>
      </div>
      <div class="mdl-tabs__panel is-active" id="create_assignment">
        <form action="create/assignment" method="post">
          <div class="mdl-textfield mdl-js-textfield">
            <input class="mdl-textfield__input" name="rubrik" type="text" id="rubrik">
            <label class="mdl-textfield__label" for="rubrik">Vad ska göras?</label>
          </div>
          <div class="mdl-textfield mdl-js-textfield">
            <input class="mdl-textfield__input" name="description" type="text" id="description">
            <label class="mdl-textfield__label" for="description">Beskrivning</label>
          </div>
          <div class="mdl-textfield mdl-js-textfield">
            <input class="mdl-textfield__input" name="date" type="date" id="date">
            <label class="mdl-textfield__label" for="date">Date</label>
          </div>

          <div class="mdl-textfield mdl-js-textfield">
            <input class="mdl-textfield__input" name="datetime" type="datetime" id="datetime">
            <label class="mdl-textfield__label" for="datetime">Time</label>
          </div>
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
            Log In
          </button>
        </form>
      </div>
    </div>
  </div>
</div>